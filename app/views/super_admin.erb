  <div class="py-12 px-4" style="min-height: calc(100vh - 64px);">
    <div class="max-w-6xl mx-auto">
      <div class="mb-8">
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-2">
          Super Admin Panel
        </h1>
        <p class="text-sm sm:text-base text-gray-600">
          Manage organizations and view system statistics
        </p>
      </div>

      <!-- Messages -->
      <% if @success %>
        <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <p class="text-green-800 font-medium"><%= @success %></p>
          </div>
        </div>
      <% end %>

      <% if @error %>
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <p class="text-red-800 font-medium"><%= @error %></p>
          </div>
        </div>
      <% end %>

      <!-- Create Organization Form -->
      <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 md:p-8 mb-8">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">Create New Organization</h2>

        <form method="POST" action="/super-admin/organizations" class="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Organization Name
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="Museum of Fine Arts"
              />
            </div>

            <div>
              <label for="username" class="block text-sm font-medium text-gray-700 mb-2">
                Username
              </label>
              <input
                type="text"
                id="username"
                name="username"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="mfa"
              />
            </div>

            <div>
              <label for="password" class="block text-sm font-medium text-gray-700 mb-2">
                Password
              </label>
              <input
                type="password"
                id="password"
                name="password"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
              />
            </div>
          </div>

          <button
            type="submit"
            class="bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-medium py-2 px-6 rounded-lg transition"
          >
            Create Organization
          </button>
        </form>
      </div>

      <!-- Organizations List -->
      <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 md:p-8 mb-8">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">Organizations</h2>

        <% if @organizations && @organizations.any? %>
          <div class="overflow-x-auto -mx-4 sm:mx-0">
            <table class="w-full min-w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base">Name</th>
                  <th class="text-left py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base">Username</th>
                  <th class="text-left py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base hidden md:table-cell">Created</th>
                  <th class="text-right py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @organizations.each do |org| %>
                  <tr class="border-b border-gray-100 hover:bg-gray-50">
                    <td class="py-3 px-2 sm:px-4 text-sm sm:text-base"><%= org.name %></td>
                    <td class="py-3 px-2 sm:px-4 font-mono text-xs sm:text-sm"><%= org.username %></td>
                    <td class="py-3 px-2 sm:px-4 text-gray-600 text-sm hidden md:table-cell"><%= org.created_at.strftime('%Y-%m-%d') %></td>
                    <td class="py-3 px-2 sm:px-4 text-right space-x-1 sm:space-x-2">
                      <a
                        href="/super-admin/organizations/<%= org.id %>/edit"
                        class="text-orange-600 hover:text-orange-700 font-medium text-sm"
                      >
                        Edit
                      </a>
                      <form method="POST" action="/super-admin/organizations/<%= org.id %>/delete" class="inline">
                        <button
                          type="submit"
                          onclick="return confirm('Are you sure you want to delete <%= org.name %>?')"
                          class="text-red-600 hover:text-red-700 font-medium text-sm"
                        >
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-600">No organizations created yet.</p>
        <% end %>
      </div>

      <!-- API Keys Section -->
      <div class="bg-white rounded-lg shadow-lg p-4 sm:p-6 md:p-8 mb-8">
        <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-6">API Keys</h2>

        <!-- Create API Key Form -->
        <form method="POST" action="/super-admin/api-keys" class="mb-8">
          <div class="flex flex-col sm:flex-row gap-4">
            <div class="flex-1">
              <label for="api_key_name" class="block text-sm font-medium text-gray-700 mb-2">
                API Key Name
              </label>
              <input
                type="text"
                id="api_key_name"
                name="name"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-transparent"
                placeholder="Production API Key"
              />
            </div>
            <div class="flex items-end">
              <button
                type="submit"
                class="w-full sm:w-auto bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-medium py-2 px-6 rounded-lg transition"
              >
                Create API Key
              </button>
            </div>
          </div>
        </form>

        <!-- API Keys List -->
        <% if @api_keys && @api_keys.any? %>
          <div class="overflow-x-auto -mx-4 sm:mx-0">
            <table class="w-full min-w-full">
              <thead>
                <tr class="border-b border-gray-200">
                  <th class="text-left py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base">Name</th>
                  <th class="text-left py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base">Key</th>
                  <th class="text-left py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base hidden lg:table-cell">Created</th>
                  <th class="text-left py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base hidden xl:table-cell">Last Used</th>
                  <th class="text-right py-3 px-2 sm:px-4 font-semibold text-gray-700 text-sm sm:text-base">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @api_keys.each do |key| %>
                  <tr class="border-b border-gray-100 hover:bg-gray-50">
                    <td class="py-3 px-2 sm:px-4 text-sm sm:text-base"><%= key.name %></td>
                    <td class="py-3 px-2 sm:px-4 font-mono text-xs sm:text-sm text-gray-600"><%= key.masked_key %></td>
                    <td class="py-3 px-2 sm:px-4 text-gray-600 text-sm hidden lg:table-cell"><%= key.created_at.strftime('%Y-%m-%d') %></td>
                    <td class="py-3 px-2 sm:px-4 text-gray-600 text-sm hidden xl:table-cell">
                      <%= key.last_used_at ? key.last_used_at.strftime('%Y-%m-%d %H:%M') : 'Never' %>
                    </td>
                    <td class="py-3 px-2 sm:px-4 text-right">
                      <form method="POST" action="/super-admin/api-keys/<%= key.id %>/delete" class="inline">
                        <button
                          type="submit"
                          onclick="return confirm('Are you sure you want to delete this API key?')"
                          class="text-red-600 hover:text-red-700 font-medium text-sm"
                        >
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <p class="text-gray-600">No API keys created yet.</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- API Key Modal -->
  <% if @new_api_key %>
    <div id="api-key-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center p-4 z-50">
      <div class="bg-white rounded-lg shadow-xl max-w-2xl w-full p-6 sm:p-8">
        <div class="flex items-start justify-between mb-4">
          <div>
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-2">API Key Created Successfully</h3>
            <p class="text-sm sm:text-base text-gray-600">
              Save this API key now. You won't be able to see it again!
            </p>
          </div>
          <button type="button" class="text-gray-400 hover:text-gray-600" onclick="closeApiKeyModal()">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>

        <div class="bg-gray-50 border border-gray-200 rounded-lg p-4 mb-6">
          <div class="flex items-center justify-between mb-2">
            <label class="text-sm font-medium text-gray-700">Your API Key</label>
            <button
              type="button"
              onclick="copyApiKey()"
              class="text-orange-600 hover:text-orange-700 text-sm font-medium flex items-center"
            >
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
              </svg>
              Copy
            </button>
          </div>
          <code id="api-key-value" class="block font-mono text-xs sm:text-sm break-all text-gray-900 bg-white p-3 rounded border border-gray-300">
            <%= @new_api_key %>
          </code>
        </div>

        <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-6">
          <div class="flex">
            <svg class="w-5 h-5 text-orange-600 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <p class="text-sm text-orange-800">
              This is the only time you'll see this API key. Make sure to save it in a secure location.
            </p>
          </div>
        </div>

        <div class="flex justify-end">
          <button
            type="button"
            onclick="closeApiKeyModal()"
            class="bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white font-medium py-2 px-6 rounded-lg transition"
          >
            Got it
          </button>
        </div>
      </div>
    </div>

    <script>
      function copyApiKey() {
        const apiKeyValue = document.getElementById('api-key-value').textContent;
        navigator.clipboard.writeText(apiKeyValue).then(function() {
          // Change button text temporarily
          const copyButton = event.target.closest('button');
          const originalHTML = copyButton.innerHTML;
          copyButton.innerHTML = '<svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>Copied!';
          setTimeout(function() {
            copyButton.innerHTML = originalHTML;
          }, 2000);
        });
      }

      function closeApiKeyModal() {
        document.getElementById('api-key-modal').style.display = 'none';
      }

      // Close modal on Escape key
      document.addEventListener('keydown', function(event) {
        if (event.key === 'Escape') {
          closeApiKeyModal();
        }
      });

      // Close modal on outside click
      document.getElementById('api-key-modal').addEventListener('click', function(event) {
        if (event.target === this) {
          closeApiKeyModal();
        }
      });
    </script>
  <% end %>
