  <!-- How It Works Section -->
  <div id="how-it-works" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="lg:grid lg:grid-cols-2 lg:gap-8 items-center">
        <!-- Left Column - How It Works -->
        <div>
          <h2 class="text-3xl font-extrabold text-gray-900 mb-8">How It Works</h2>
          <div class="bg-white rounded-lg shadow-lg p-8">
            <!-- Flowchart -->
            <ol class="relative border-l-2 border-orange-500 ml-3 space-y-8">
              <!-- Step 1 -->
              <li class="ml-6">
                <span class="absolute flex items-center justify-center w-8 h-8 bg-red-500 rounded-full -left-4 ring-4 ring-white">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
